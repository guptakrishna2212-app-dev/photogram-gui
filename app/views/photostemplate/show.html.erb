<h1>
  Photo Details
</h1>

<dl>
  <dt>
    Image
  </dt>

  <dd>
    <img src="<%= @photo.image %>">
  </dd>

  <dt> 
    Caption
  </dt>

  <dd>
  <%= @photo.caption %>
  </dd>

  <dt>
    Owner
  </dt>

  <dd>
  <%= @photo.poster.username %>
  </dd>

  <dt>
    Posted
  </dt>

  <dd>
    <%= @photo.created_at %>
  </dd>

  <dt>
    Edit photo
  </dt>

  <dd>
    <form>
      <label for="form_img_id">
        Image
      </label>

      <input type="text" id="form_img_id" value="<%= @photo.image %>">
    
      <label for="form_caption_id">
      Caption
      </label>

      <textarea id="form_caption_id"> <%= @photo.caption %></textarea>

      <input type="submit" value="Update photo">

    </form>
  </dd>

  <dt>
    Delete photo
  </dt>

  <dd>
    <a href="/delete_photo/<%= @photo.id %>">
      Delete this photo
    </a>
  </dd>

</dl>

<h2>
  Comments
</h2>

<table>
  <tr>
    <td>
     Commenter
    </td>

    <td>
      Comment
    </td>

    <td>
      Posted
    </td>
  </tr>

  <% @photo.comments.each do |each_comment| %>

  <% @commenter = User.all.where({:id => each_comment.author_id}).at(0).username %>

    <tr>
      <td>
        <%= @commenter %>
      </td>

      <td>
        <%= each_comment.body %>
      </td>

      <td>
        <%= each_comment.created_at%>
      </td>

    </tr>

  <% end %>

</table>

<h3>
  Add a new comment
</h3>

<form action="/new_comment" >
  <label for="form_img_id">
    Photo ID
  </label>

  <input type="text" id="form_img_id" value="<%= @photo.id %>" name="formphotoid">

  <label for="form_caption_id">
  Author ID
  </label>

  <input type="text" id="form_img_id" name="formauthorid">

  <label for="form_comment">
  Comment
  </label>

  <textarea id="form_comment" placeholder="Enter a comment..." name="formcomment"></textarea>

  <button type="submit">
  Add comment
  </button>

</form>
