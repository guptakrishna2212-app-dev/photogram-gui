<h1>
  List of photos
</h1>

<form action="/insert_photo">

  <label for="form_img_id">
    Image
  </label>

  <input type="text" id="form_img_id" placeholder="Enter a URL for the image..." name= "image_url">
  
  <label for="form_caption_id">
  Caption
  </label>

  <textarea type="text" id="form_caption_id" placeholder="Enter a caption for the photo..." name= "caption_text">
  </textarea>

  <label for="form_owner_id">
    Owner ID
  </label>

  <input type="text" id="form_owner_id" placeholder="Enter an ID of a user..." name="ownerid_text" >

  <button> 
    Add photo 
  </button>

</form>


<table border ="1">
  <tr>
    <th>
    Image
    </th>

    <th>
    Caption
    </th>

    <th>
    Owner
    </th>

    <th>
    Posted
    </th>

    <th>

    </th>

  </tr>
  
  <% Photo.all.order({ :created_at => :desc }).each do |a_photo| %>

    <tr>
      <td>
        <img src="<%= a_photo.image %>">
      </td>

      <td>
        <%= a_photo.caption %>
      </td>

      <td>
        <%= a_photo.poster.username %>
      </td>

      <td>
        <%= a_photo.created_at %>
      </td>

      <td>
        <a href= "/photos/<%= a_photo.id %>">
          Show details
        </a>
      </td>            

    </tr>

  <%end%>

</table>
